<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ScaleToRefresh="http://schemas.android.com/apk/res/com.aj2014.scalableptrview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.aj2014.scalableptrview.ScalablePtrView
        android:id="@+id/scalable_ptr_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ScaleToRefresh:imgHeight="260dip"
        ScaleToRefresh:imgSrc="@drawable/bg_person_center_head"
        android:background="#80FFFF00" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFF00" />
    </com.aj2014.scalableptrview.ScalablePtrView>

</RelativeLayout>